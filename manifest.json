{
    "name" : "test",
    "version" : "1.0",
    "manifest_version" : 2,
    "description": "Test plugin",
    "browser_action" : {
        "default_popup": "popup.html",
        "default_title": "Test"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content.js"]
    }],
    "background": {
        "scripts" : ["backgrounds.js"]
    },
    "permissions" : [
        "background",
        "tabs",
        "http://*/*",
        "https://*/*",
        "storage"
    ]
}